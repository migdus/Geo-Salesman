<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/no_items_found_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView_large_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView_medium_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_large_size"
            android:layout_centerInParent="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView_show_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <LinearLayout
        android:id="@+id/floating_buttons_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/select_button"
            style="@style/button_inside_linear_layout"
            android:text="@string/select"
            android:visibility="gone" />

        <Button
            android:id="@+id/delete_button"
            style="@style/button_inside_linear_layout"
            android:text="@string/delete"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancel_button"
           style="@style/button_inside_linear_layout"
            android:text="@string/cancel"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>
