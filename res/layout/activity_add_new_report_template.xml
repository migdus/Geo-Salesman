<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/report_template_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/report_template_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/report_template_name" />

    <TextView
        android:id="@+id/report_template_questions_added"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report_template_description"
    />

    <Button
        android:id="@+id/report_template_questions_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report_template_questions_added"
        android:text="@string/add_or_remove_questions" />

</RelativeLayout>